<div class="container">
    <div class="row col-12 text-center">
        <h1>
            <%= @restaurant.name %>
        </h1>
        <h3>
            <%= @restaurant.address %>
        </h3>
        <h4>
            <%= @restaurant.category %>
        </h4>
        <h6>
            <%= @restaurant.phone_number %>
        </h6>
        <%= link_to 'Back', restaurants_path %>
    </div>

    <h3>Reviews</h3>
    <ul class="list-group bg-light p-4 d-flex align-items-center">
        <div class="container col-12 d-flex justify-content-center">
            <%= link_to "Add new review", new_restaurant_review_path(@restaurant), :class=> "btn btn-primary" %>
        </div>
        <% @reviews.each do |review| %>
            <li class="my-2 p-3 bg-white shadow-sm list-group-item border-0 col-9">
                <%= review.content %>
                <div>
                    <% review[:rating].times do |thing| %>
                        <i class="fa-solid fa-star" style="color: #ffec00;"></i>
                    <% end %>
                </div>
            </li>
        <% end %>
    </ul>
</div>
